{
  "name": "cvpilot-frontend",
  "version": 2,
  "buildCommand": "cd app && npm ci && npm run build",
  "outputDirectory": "app/.next",
  "installCommand": "cd app && npm ci",
  "framework": "nextjs",
  "functions": {
    "app/pages/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://cvpilot-670621051738.asia-northeast3.run.app"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://cvpilot-670621051738.asia-northeast3.run.app/api/$1"
    }
  ]
} 